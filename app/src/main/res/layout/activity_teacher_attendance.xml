<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSelectedClassroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seçili Derslik: Yok"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnSelectClassroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Derslik Seç"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCourses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yoklama bekleniyor..."
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" />

    </ScrollView>

    <Button
        android:id="@+id/btnEndAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yoklamayı Bitir"
        android:layout_marginTop="16dp"/>

</LinearLayout> 